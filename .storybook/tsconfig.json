{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es5", "es6", "es7", "es2017", "es2019", "dom"],
    "strict": true,
    "module": "CommonJS",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "outDir": "dist",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "rootDirs": ["src", "stories"],
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
