{
    "compilerOptions": {
      "target": "ES2020",
      "strict": true,
      "module": "esnext",
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "sourceMap": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "types": ["@emotion/react/types/css-prop", "node", "jest"]
    },

    "include": ["**/*.stories.tsx"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
